version: '3'

services:
  {{ web_app_container_name }}:
    image: {{ web_app_image }}
    container_name: {{ web_app_container_name }}
    restart: {{ web_app_restart_policy }}
    ports:
      - "{{ web_app_port }}:80"
    volumes:
      - ./data:/usr/share/nginx/html
    networks:
      - web_network

networks:
  web_network:
    driver: bridge 